<%= form_for @user do |form| %>
	<% @user.errors.any? %>
	<% @user.errors.full_messages.each do |msg| %>
		<div class = "alert">
			<p>
				<%= msg %>
			</p>
		</div>
	<% end %>		
  <div class="field">
		<div class = 'inner-div'>
			<h2>Create account</h2>
		
				<%= form.text_field :username, placeholder: "Username", :class => 'text' %>

				<%= form.email_field :email, placeholder: "Email", :class => 'text' %>

				<%= form.password_field :password, placeholder: "Password", :class => 'text' %>
				<%= form.password_field :password_confirmation, placeholder: "Confirm Password", :class => 'text' %>

				<%= form.submit 'submit', :class => 'submit' %>
				<p><%= link_to 'LogIn', @articles_path %></p>
			</div>
		</div>
<% end %>